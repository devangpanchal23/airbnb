 <% layout("/layouts/boilerplate") %>

<style>
    .listing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .listing-card {
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.12);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .listing-card:hover {
        transform: translateY(-4px);
        box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.18);
    }

    .listing-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .listing-body {
        padding: 16px;
    }

    .listing-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 6px;
        color: #111;
        text-decoration: none;
    }

    .listing-desc {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 10px;
    }

    .listing-price {
        font-size: 1rem;
        font-weight: 700;
        margin-top: 6px;
    }

    .listing-title:hover {
        text-decoration: underline;
    }
</style>


<h3 class="mb-4">All Listings</h3>

<div class="listing-grid mb-5">
    <% for (let Listing of allListing) { %>
        <div class="listing-card">
            <img src="<%= Listing.image.url %>" alt="listing_image">

            <div class="listing-body">
                <a href="/listings/<%= Listing._id %>" class="listing-title">
                    <%= Listing.title %>
                </a>

                <p class="listing-desc">
                    <%= Listing.description %>
                </p>

                <p class="listing-price">
                    ₹ <%= (Listing.price != null) ? Number(Listing.price).toLocaleString("en-IN") : "N/A" %>
                </p>
            </div>
        </div>
    <% } %>
</div>
